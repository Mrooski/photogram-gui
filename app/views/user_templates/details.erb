<nav>
  <ul>
    <li>
      <a href="/users">Users</a>
    </li>
    <li>
      <a href="/photos">Photos</a>
    </li>
  </ul>
</nav>

<h1><%= @user.username %></h1>

<dl>
  <dt>ID</dt>
  <dd><%= @user.id %></dd>
  <dt>Edit user</dt>
  <dd>
  <form action="/update_user/<%= @user.id %>" method="post">
    <label for="browser_username">Username</label>
    <input type="text" id="browser_username" name="input_browser_username" value="<%= @user.username %>">
    <button>Update user</button>
  </form>
  </dd>
</dl>

<h2>Own photos (<%= @user.own_photos.count.to_s %>)</h2>

<table border="1">
  <tbody>
    <tr>
      <th>Image</th>
      <th>Owner</th>
      <th>Caption</th>
      <th>Posted</th>
      <th></th>
    </tr>
    <% @user.own_photos.each do |photo|%>
      <tr>
        <td>
          <img src="<%= photo.image %>">
        </td>
        <td><%= @user.username %></td>
        <td><%= photo.caption %></td>
        <td><%= photo.created_at %></td>
        <td><a href="/photos/<%=photo.id%>">Show details</a></td>
      </tr>
    <% end %>
  </tbody>
</table>
