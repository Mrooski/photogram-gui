<h1>List of Users</h1>


<form action="/add_user" method="post">
  <label for="browser_username">Username</label>
  <input type="text" id="browser_username" placeholder="Enter a username..." name="input_username">
  <button>Add user</button>
</form>

<hr>


<table border="1">

<tbody>

<tr>
  <th>
    ID
  </th>
  <th>
    Username
  </th>
  <td></td>
</tr>

<%@user_list.each do |user|%>
<tr>
  <td><%=user.id%></td>
  <td><%=user.username%></td>
  <td><a href="/users/<%=user.username%>">Show details</a></td>

</tr>


<%end%>

</tbody>

</table>
